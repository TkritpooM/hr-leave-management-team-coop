# --- Database Configuration ---
# แนะนำให้สร้าง Database ชื่อ 'hr_db' ใน MySQL Workbench ก่อน
DATABASE_URL="mysql://root:Your_DB_Pass@localhost:3306/hr_db"

# --- Server Configuration ---
PORT=8000
NODE_ENV=development
# FRONTEND_URL="http://localhost:5173"
# AUDIT_LOG_RETENTION_DAYS="90" # Optional: Default is http://localhost:5173

# --- Security Configuration ---
# SECRET KEY: ใช้สำหรับลงลายเซ็น (sign) JWT Token
JWT_SECRET="YourVeryStrongAndComplexSecretKeyForJWT"
JWT_EXPIRES_IN="7d"

# --- Timezone Configuration (สำคัญมากสำหรับการจัดการเวลา) ---
# ต้องใช้ Asia/Bangkok สำหรับการเปรียบเทียบ check-in time
TIMEZONE=Asia/Bangkok
STANDARD_CHECK_IN_TIME="09:00:00" # สำหรับการเปรียบเทียบ is_late